#!/bin/bash -e

lockit () {
  exec {lockfd}<>~/.lilac/.lock
  flock -n $lockfd || {
    echo "Waiting for lock to release..."
    flock $lockfd
  }
}

download-pylib(){
  mkdir $LILACPATH/pylib
  cd $LILACPATH/pylib
  wget -q "https://raw.githubusercontent.com/lilydjwg/winterpy/master/pylib/"{archpkg,htmlutils,mailutils,myutils,nicelogger,serializer}.py
}

lockit
mkdir -p ~/.lilac/log

set +e
. /etc/profile
set -e
export TZ=Asia/Shanghai
export LANG=zh_CN.UTF-8
export TERM=xterm

export LILACPATH="$(dirname "$(readlink -f "${0}")")"
export PATH=$LILACPATH:$PATH

[ ! -d $LILACPATH/pylib ] && download-pylib
export PYTHONPATH=$LILACPATH/pylib:$PYTHONPATH

lilac "$@" > ~/.lilac/log/"$(date +'%Y-%m-%dT%H:%M:%S')" 2>&1
